<hr />

<h3>Blogs</h3>
<br />
<div class="row">
    @foreach (var item in ViewData["userblog"] as List<PharmaAssist.Models.BlogPost>)
    {
    
        <div class="card" style="width: 18rem;">
            <img src="@Url.Content(item.Image)" class="card-img-top" alt="DoctorImage">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Doctor.Name)</h5>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.Description) </p>
                <a href="/Doctor/Details/@item.Id" class="btn btn-primary">Details</a>
            </div>
        </div>




