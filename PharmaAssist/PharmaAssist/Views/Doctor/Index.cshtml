@model IEnumerable<PharmaAssist.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Doctors</h2>


<div class="row">
    @foreach (var item in Model)
    {

        <div class="card" style="width: 18rem;">
            <img src="@Url.Content(item.Image)" class="card-img-top" alt="DoctorImage">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text"><b>Specialist:</b> @Html.DisplayFor(modelItem => item.Specialist.Name) </p>
                <a href="/Doctor/Details/@item.Id" class="btn btn-primary">Details</a>
            </div>
        </div>



    }
</div>


